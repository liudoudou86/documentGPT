{
    "name": "document-gpt",
    "displayName": "DocumentGPT",
    "description": "文档类型的GPT辅助工具",
    "version": "0.0.1",
    "publisher": "Tesla Liu",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:document-gpt.input"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "configuration": {
			"type": "object",
			"title": "documentGPT",
			"properties": {
                "documentGPT.url": {
					"type": "string",
                    "default": "https://api.aigcfun.com/api/v1/text",
					"description": "documentGPT's url"
				},
				"documentGPT.key": {
					"type": "string",
                    "default": null,
					"description": "documentGPT's key"
				}
			}
		},
        "commands": [
            {
                "command": "documentGPT.input",
                "title": "Start documentGPT"
            }
        ],
        "keybindings": [
            {
                "command": "documentGPT.input",
                "key": "ctrl+shift+z",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "documentGPT.input",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./src/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.78.0",
        "@vscode/test-electron": "^2.2.2",
        "eslint": "^8.33.0",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "axios": "^1.4.0"
    }
}
